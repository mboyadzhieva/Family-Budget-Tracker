@using System.Linq;
@model List<FBT.MVC.Models.IncomeModel>

<h2>Incomes</h2>

<a href="/Income/Create">Create</a>

<table class="table table-responsive">
    <tr>
        <td>Name</td>
        <td>Price</td>
        <td>Type</td>
        <td>Recurring</td>
        <td>
            Actions
        </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PaymentDate.ToString("dd-MMMM-yyyy")</td>
            <td>@item.Amount</td>
            <td>@item.IncomeType</td>
            <td>
                @{
                    if (@item.IsRecurring)
                    {
                        <span>Yes</span>
                    }
                    else
                    {
                        <span>No</span>
                    }
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, isRecurring = item.IsRecurring}, null)
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, isRecurring = item.IsRecurring}, null)
            </td>
        </tr>
    }
</table>
